#!/usr/bin/env bash
set -euo pipefail

pgrep talon && exit 0

export TERM=xterm-256color
export NIXPKGS_ALLOW_UNFREE=1

notify-send "Starting talon..."

channel='https://github.com/NixOS/nixpkgs/archive/1226f56747aa8f8f78f37827060a344dd12dbdc8.tar.gz'  # NixOS release-24.11 as of 2025-06-19
pgrep snixembed || snixembed &

mkdir -p /tmp/talon && cd /tmp/talon
nix build -Lvf $channel talon

./result/bin/talon
