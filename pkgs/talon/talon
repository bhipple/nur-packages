#!/usr/bin/env bash
set -euo pipefail

pgrep talon && exit 0

export TERM=xterm-256color
export NIXPKGS_ALLOW_UNFREE=1

notify-send "Starting talon..."

channel='https://github.com/NixOS/nixpkgs/archive/a4bad3269f174936355fe298792839834b4c73c9.tar.gz'  # NixOS release-25.05 as of 2025-09-01
pgrep snixembed || snixembed &

mkdir -p /tmp/talon && cd /tmp/talon
nix build -Lvf $channel talon

./result/bin/talon
